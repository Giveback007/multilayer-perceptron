{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2018", "es2017", "dom"],
        "rootDir": "src",
        "outDir": "dist/",
        "jsx": "react",
        "noImplicitAny": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}